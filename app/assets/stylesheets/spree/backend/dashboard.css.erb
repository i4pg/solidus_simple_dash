.dashboard_main #by_day_options {
  background-color: #0095DA;
  -moz-border-radius-bottomleft: 10px;
  -moz-border-radius-bottomright: 10px;
  -moz-border-radius-topleft: 10px;
  -moz-border-radius-topright: 10px;
  -webkit-border-bottom-left-radius: 10px 10px;
  -webkit-border-bottom-right-radius: 10px 10px;
  -webkit-border-top-left-radius: 10px 10px;
  -webkit-border-top-right-radius: 10px 10px;
  color: #fff;
  margin-top: 10px;
  padding: 5px;
  text-align: center;
}

#order_by_day_title {
  padding-bottom: 5px;
  color: #476D9B;
  clear: both;
}

#order_totals {
  padding: 10px 10px 30px;
}

#order_totals td {
  text-align: center;
  border-top: none;
}

#order_totals label {
  font-size: 48px;
  line-height: 60px;
  font-weight: 600;
}

#order_totals .order_totals_title {
  display: block;
  font-size: 16px;
  line-height: 24px;
  margin-bottom: 10px;
  color: #6c757d;
}

.dashboard_main #by_day_options label {
  padding: 0px 10px;
}

.dashboard_right {
  width: 20%;
  float: left;
}

.dashboard table th {
  background-color: #0095DA;
  color: #fff;
}

.dashboard_small_wrapper {
  padding: 0px 20px 0px 0px;
}

.general-info {
  margin-bottom: 20px;
}

.bar-title {
  position: relative;
  text-align: center;
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 20px;
}

.bar-title:before {
  content: '';
  position: absolute;
  top: calc(50% - 1px);
  left: 0;
  width: 100%;
  height: 1px;
  background: #e5e7eb;
  z-index: 0;
}

.bar-title > span {
  padding-left: 1rem;
  padding-right: 1rem;
  position: relative;
  background: #FFFFFF;
  z-index: 1;
}

#pie-legend {
  font-size: 1em;
  margin-top: 20px;
}

.dashboard_wrapper {
  margin-top: 40px;
}

.dashboard_wrapper .row {
  margin-top: 40px;
}

#pie-legend .pie-element {
  float: none;
}

#pie-legend .pie-element i {
  float: left;
  line-height: 15px;
  margin-top: 2px;
  width: 15px;
}

#pie-legend .pie-element label {
  margin-left: 5px;
}

#pie-legend .pie-element span {
  float: right;
}

.text-right {
  text-align: right;
}

.jqplot-table-legend {
  width: 60px;
}

#by-day-options {
  padding: 30px 15px;
  background-color: #f9fafb;
  align-items: center;
}

#by-day-options h3 {
  font-size: 28px;
  font-weight: 600;
  line-height: 37px;
  margin: 0;
}